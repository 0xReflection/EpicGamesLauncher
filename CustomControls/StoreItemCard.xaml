<UserControl x:Class="EpicGamesLauncher.CustomControls.StoreItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpicGamesLauncher.CustomControls"
                        mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="213"
             Height="Auto"
             Width="213"
             Name="This">
    <UserControl.Resources>
        <Style x:Key="CardButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource SearchBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource CaptionFontBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Brutal Type"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="285"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Image Section -->
                            <Border Grid.Row="0" CornerRadius="3">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding ImageSource, ElementName=This}"
                                                Stretch="UniformToFill"/>
                                </Border.Background>

                                <!-- Hover Overlay -->
                                <Border Name="MaskBorder"
                                        Background="#FFFFFF"
                                        CornerRadius="3"
                                        Opacity="0"/>
                            </Border>

                            <!-- Info Section -->
                            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Margin="0,10">
                                <TextBlock Text="{Binding Title, ElementName=This}"
                                          FontSize="15" FontWeight="Bold"
                                          TextTrimming="CharacterEllipsis"
                                          HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding Developer, ElementName=This}"
                                          FontSize="13" Foreground="LightGray"/>
                                <TextBlock Text="{Binding Genre, ElementName=This}"
                                          FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding Platform, ElementName=This}"
                                          FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding Price, ElementName=This}"
                                          FontSize="19" Foreground="White" FontWeight="Bold"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="38"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- More Options Button -->
                                    <Button Grid.Column="1"
                                            Name="MoreOptionsButton"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Width="30" Height="25"
                                            Click="MoreOptionsButton_Click">
                                        <Path Fill="{StaticResource IconInactiveBrush}"
                                              Data="{StaticResource MoreIcon}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard SpeedRatio="8">
                                            <DoubleAnimation Storyboard.TargetName="MaskBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To=".1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard SpeedRatio="8">
                                            <DoubleAnimation Storyboard.TargetName="MaskBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Card Button -->
        <Button Style="{StaticResource CardButtonStyle}"
                Background="Transparent"
                VerticalContentAlignment="Top"
               />

        <!-- More Options Popup -->
        <Popup Name="MoreOptionsPopup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=MoreOptionsButton}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <Border Background="{StaticResource SearchBackgroundBrush}"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3">
                <StackPanel>
                    <Button Name="ActionButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{StaticResource CaptionFontBrush}"
                            Padding="15,8"
                            Click="ActionButton_Click"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>